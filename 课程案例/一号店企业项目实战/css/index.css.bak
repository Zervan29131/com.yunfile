/*header*/
#hd_header_wrap{
	height:200px;
}

#hd_header_wrap div.hd_top{
	width:100%;
	height:35px;
	background:#fafafa;
	line-height:35px;
	border-bottom:1px solid #ccc;
}

#hd_header_wrap div.hd_top div.hd_top_con{
	height:100%;
}

#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_left{
	cursor:pointer;
}
/*hd_top_user*/
#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_left div.hd_top_user{
	position:relative;
	z-index:2;
}
#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_left div.hd_top_user div.hd_login{
	height:37px;
	background:#fff;
	border:1px solid #ccc;
	border-top:none;
	padding:0px 6px;
	
}
#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_left div.hd_top_user em.hd_arrow{
	display:block;
	width:52px;
	height:8px;
	position:absolute;
	left:26%;
	bottom:-3px;
	z-index:3;
	background:url("../images/indexhead_sprite.png") no-repeat 0 -870px;
}
#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_left div.hd_top_user div.hd_user_hide{
	width:302px;
	height:107px;
	background:#fff;
	position:absolute;
	left:0px;
	top:36px;
	z-index:2;
	border:1px solid #ccc;
	border-top:none;
	display:none;
}
#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_left div.hd_top_user:hover div.hd_user_hide{
	display:block;
}
#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_left div.hd_top_user:hover em.hd_arrow{
	background-position:-60px -870px;
}
#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_left div.hd_top_user a{
	color:#06c;
}
#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_left div.hd_top_user a.hd_dlu{
	margin:0px 3px;
}
/*hd_province*/
#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_left div.hd_province{
	padding-right:39px;
	position:relative;
	background:url("../images/indexhead_sprite.png") no-repeat right -703px;
}

#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_left div.hd_province span{
	padding:0px 5px;
}

#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_left div.hd_province a{
	padding:0 15px 0px 5px;
	border:1px solid #ccc;
	background:#fff url("../images/indexhead_sprite.png") no-repeat right 7px;
	color:#333;
	font-weight:bold;
	position:relative;
}
#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_left div.hd_province div.hd_province_hide{
	width:358px;
	height:300px;
	border:1px solid #ccc;
	position:absolute;
	left:50px;
	top:25px;
	background:#fff;
	z-index:2;
	display:none;
}

#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_left div.hd_province:hover div.hd_province_hide{
	display:block;
}
.hd_pro{
	width:100%;
	left:1px;
	top:16px;
	z-index:3;
}
#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_left div.hd_province:hover div.hd_pro{
	display:block;
}
/*头部右端导航*/
#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_right{
	float:right;
}

#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_right ul li.hd_menu{
	float:left;
	height:23px;
	padding:0px 6px;
	line-height:34px;
	background:url("../images/indexhead_sprite.png") no-repeat right -729px;
	position:relative;
	z-index:100;
}

#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_right ul li.hd_menu a{
	padding-right:18px;
	background:url("../images/indexhead_sprite.png") no-repeat right -257px;
}

#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_right ul li.hd_menu:hover a{
	background-position:right -287px;
}

#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_right ul li.hd_menu a i{
	display:inline-block;
	width:12px;
	height:16px;
	background:url("../images/indexhead_sprite.png") no-repeat right -230px;
	margin-right:5px;
	vertical-align:middle;/*文字与图片的对齐方式：文字在图片中间*/
}

#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_right ul li.hd_menu div.hd_menu_list{
	position:absolute;
	left:-2px;
	top:5px;
	border:1px solid #ccc;
	background:#fff;
	width:100.5%;
	padding-top:20px;
	z-index:-1;
	display:none;
}

#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_right ul li.hd_menu div.hd_menu_list ul li{
	padding-left:7px;
	line-height:22px;
	color:#666;
}

#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_right ul li.hd_menu:hover div.hd_menu_list{
	display:block;
}

#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_right ul li.hd_hand div.hd_hand_list{
	width:300px;
	height:200px;
	background:#fff;
	position:absolute;
	right:0px;
	top:25px;
	border:1px solid #ccc;
	display:none;
}
.none{
	width:99%;
	height:22px;
	border:1px solid #ccc; 
	position:absolute;
	right:0px;
	top:2px;
	z-index:-1;
	background:#fff;
	border-bottom:1px solid #fff;
	display:none;
}
#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_right ul li.hd_hand:hover div.hd_hand_list{
	display:block;
}

#hd_header_wrap div.hd_top div.hd_top_con div.hd_top_right ul li.hd_hand:hover div.none{
	display:block;
}

/*头部广告*/
#hd_header_wrap div.banner{
	position:relative;
	top:-2px;
	z-index:1;
}
#hd_header_wrap div.banner p{
	width:17px;
	height:38px;
	background:#444;
	color:#fff;
	text-align:center;
	position:absolute;
	right:10px;
	top:2px;
}
#hd_header_wrap div.banner p i{
	display:block;
	width:1px;
	height:1px;
	margin-left:3px;
	border:5px solid #fff;
	border-left:5px solid transparent;
	border-right:5px solid transparent;
	border-bottom:5px solid transparent;
}

/*site_header*/
#site_header{
	padding:15px 0;
}
.logo{
	float:left;
}
.search{
	margin-left:114px;
	width:520px;
	float:left;
}
.search div.form{
	height:28px;
	border:2px solid #f00;
}
.search div.form div.form_shop{
	float:left;
	width:68px;
	height:28px;
	overflow:hidden;
	background:#eee;
	border:1px solid #ccc;
	border-top:none;
	border-bottom:none;
	position:relative;
	z-index:2;
}
.search div.form div.form_shop i{
	display:block;
	width:7px;
	height:10px;
	position:absolute;
	right:12px;
	top:12px;
	background:url("../images/indexhead_sprite.png") no-repeat -235px -60px;
}
.search div.form div.form_shop a{
	display:block;
	width:53px;
	height:28px;
	margin-left:15px;
	line-height:28px;
}
.search div.form div.form_shop:hover{
	height:auto;
	border-bottom:1px solid #ccc;
}
.search div.form div.form_shop:hover i{
	background-position:-235px -68px
}
.search div.form input{
	border:none;
	outline:none;
	width:342px;
	height:27px;
}
.search div.form button{
	width:104px;
	height:28px;
	border:none;
	background:#f00;
	color:#fff;
	font-size:14px;
	font-weight:bold;
}
.search div.sort{
	padding-top:5px;
	position:absolute;
	z-index:1;
}
.search div.sort a{
	margin-right:5px;
	color:#bbb;
}

.prism{
	float:right;
}

.prism a.weal{
	float:left;
	width:60px;
	height:45px;
	background:#fcfcfc;
	border:1px solid #ccc;
	text-align:center;
	line-height:16px;
}
.prism a.weal i{
	display:block;
	margin-top:5px;
	width:22px;
	height:15px;
	margin:5px auto;
	background:url("../images/indexhead_sprite.png") no-repeat -130px -20px;
}
.prism a.weal i.order{
	background-position:-160px -20px;
}
.prism a.weal em{
	display:block;
	width:5px;
	height:3px;
	margin:0 auto;
	background:url("../images/indexhead_sprite.png") no-repeat -130px -40px;
}
.prism a.cart{
	width:65px;
	height:21px;
	float:left;
	padding:10px 10px 19px;
	background:#f00;
	position:relative;
	top:-3px;
	text-align:right;
	font-size:14px;
	color:#fff;
	line-height:25px;
}
.prism a.cart i{
	width:4px;
	height:4px;
	position:absolute;
	left:-4px;
	top:0px;
	background:url("../images/indexhead_sprite.png") no-repeat -150px -40px;
}
.prism a.cart em{
	width:17px;
	height:15px;
	position:absolute;
	left:11px;
	top:15px;
	background:url("../images/indexhead_sprite.png") no-repeat -190px -20px;
}

/*header_nav*/
#header_nav{
	height:34px;
	border-bottom:2px solid #fd3f49;
}